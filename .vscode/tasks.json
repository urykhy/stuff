{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "meson: configure for debug",
      "type": "shell",
      "command": "meson build --buildtype=debug",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/${relativeFileDirname}"
      },
      "presentation": {
        "showReuseMessage": false,
        "reveal": "always"
      }
    },
    {
      "label": "meson: build all",
      "type": "shell",
      "command": "ninja",
      "problemMatcher": [
        "$gcc"
      ],
      "options": {
        "cwd": "${workspaceFolder}/${relativeFileDirname}/build"
      },
      "presentation": {
        "showReuseMessage": false,
        "reveal": "always"
      }
    },
    {
      "label": "meson: run tests",
      "type": "shell",
      "command": "meson test",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/${relativeFileDirname}/build"
      },
      "dependsOn": [
        "meson: build all"
      ],
      "presentation": {
        "showReuseMessage": false,
        "reveal": "always"
      }
    },
    {
      "label": "meson: run benchmarks",
      "type": "shell",
      "command": "meson test --benchmark",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/${relativeFileDirname}/build"
      },
      "dependsOn": [
        "meson: build all"
      ],
      "presentation": {
        "showReuseMessage": false,
        "reveal": "always"
      }
    },
    {
      "label": "clang-format for all project",
      "type": "shell",
      "command": "clang-format -i -style=file */*.hpp */*.cpp",
      "problemMatcher": []
    },
    {
      "label": "build all meson projects",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "args": [
            "-i"
          ]
        }
      },
      "command": "source .envrc && for x in */meson.build; do echo $x; done | awk -F/ '{print $1}' | grep -v http_parser | parallel -I% 'pushd % && meson setup --wipe build && pushd build && ninja -j1'",
      "problemMatcher": []
    },
    {
      "label": "prepare compile_commands.json",
      "type": "shell",
      "command": "cat */build/compile_commands.json | jq -s 'map(.[])' > compile_commands.json",
      "problemMatcher": []
    },
  ]
}